<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
<link href='https://fonts.googleapis.com/css?family=Poiret+One' rel='stylesheet' type='text/css'>
<style>
.jumbotron{
    background-color:#a6a6a6;

}
/* Adds borders for tabs */
.tab-content {
    border-left: 1px solid #ddd;
    border-right: 1px solid #ddd;
    border-bottom: 1px solid #ddd;
    padding: 10px;
}
.nav-tabs {
    margin-bottom: 0;
}
.page-header {
  font-size: 40px;
  font-family: 'Poiret One', cursive, bold;
  color: #9acd32;
}
</style>
<div class="btn btn-success">
<%= link_to "Go to main page", profile_index_path%>
</div>
<hr>
<div class="container">
<img src="<%=@profile.image%>" height="300em" width="300em">
<br>
<br>
<p>Full Name:</p>
<div class="well well-sm">
<%= @profile.name %>
<%= @profile.surname %>
</div>
<p>Status:</p>
<div class="well well-sm">
<%= @profile.status %>
</div>
<p>Programming Language:</p>
<div class="well well-sm">
<%= @profile.language %>
</div>
<p>Level of Expertise:</p>
<div class="well well-sm">
<%= @profile.expertise %>
</div>
<p>Occupation:</p>
<div class="well well-sm">
<%= @profile.occupation %>
</div>
<p>Location:</p>
<div class="well well-sm">
<%= @profile.location %>
</div>
</div>

<br>
<div class="btn btn-success">
<%= link_to "Review this maker", new_profile_review_path(@profile.id)%>
</div>
<br>
<h3 class="reviews">Reviews for <%= @profile.name %></h3>
<div class="well well-md">
<% if @profile.reviews.any? %>
  <ul class="custom-bullet">
    <% @profile.reviews.each do |review| %>
      <li>
        <%= review.thoughts %>, <strong><%= review.rating %></strong>/5
      </li>
      <br>
    <% end %>
  </ul>
<% else %>
  <p>No reviews.</p>
<% end %>
</div>
