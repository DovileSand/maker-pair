<head>
<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
</head>

<button type="submit" class = "btn btn-warning btn-lg"><a href="/profile/new" >Add your profile</a></button><br><br>
<hr>
<div class="container bootstrap snippet">
<img src="<%=@profile.image%>">
<%= @profile.name %>
<%= @profile.surname %>
<%= @profile.status %>
<%= @profile.language %>
<%= @profile.expertise %>
<%= @profile.occupation %>
<%= @profile.location %>
</div>

<%= link_to "Review this maker", new_profile_review_path(@profile.id)%>
<h3>Reviews for <%= @profile.name %></h3>

<% if @profile.reviews.any? %>
  <ul>
    <% @profile.reviews.each do |review| %>
      <li>
        <%= review.thoughts %>, <strong><%= review.rating %></strong>/5
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No reviews.</p>
<% end %>
