<style>
.col-lg-12 {
  padding-left: 20px;
  background-color: white;
}
</style>

<button type="submit" class = "btn btn-warning btn-md"><a href="/profile/new" >Add your profile</a></button><br><br>

<div class="container bootstrap snippet">
    <div class="row">
        <div class="col-lg-12">
            <div class="main-box no-header clearfix">
                <div class="main-box-body clearfix">
                    <div class="table-responsive">
                        <table class="table user-list">
                          <h2>Mentors</h2>
                            <thead>
                                <tr>
                                <th><span>Full Name</span></th>
                                <th><span>Languages</span></th>
                                <th><span>Location</span></th>
                                <th><span>GitHub Account</span></th>
                                <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody >
                              <% if @mentor.any? %>
                              <% @mentor.each do |profile| %>
                                <tr>
                                    <td>
                                        <img src="<%=profile.image%>">
                                        <div class="user-link">
                                          <%= profile.name %>
                                          <%= profile.surname %>
                                        </div>
                                        <span class="user-subhead">
                                          <%= profile.status %>
                                        </span>
                                    </td>
                                    <td>
                                      <%= profile.language %>
                                    </td>
                                    <td>
                                        <span class="label label-default">
                                          <%= profile.location %>
                                        </span>
                                    </td>
                                    <td>
                                        <a href="<%=profile.github%>"><%="#{profile.name}'s GitHub Profile"%></a>
                                    </td>
                                    <td>
                                        <%= link_to "View My Mentors", profile_schedules_path(profile) %>
                                      </span>
                                    <td>
                                    <td style="width: 20%;">
                                      <a href="/profile/<%=profile.id%>" class="table-link">
                                            <span class="fa-stack">
                                                <i class="fa fa-square fa-stack-2x"></i>
                                                <i class="fa fa-search-plus fa-stack-1x fa-inverse"></i>
                                            </span>
                                        </a>
                                        <% if @current_user == profile.id %>
                                        <a href="/profile/<%=profile.id%>/edit" class="table-link">
                                            <span class="fa-stack">
                                                <i class="fa fa-square fa-stack-2x"></i>
                                                <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                            </span>
                                        </a>
                                      <%end%>
                                        <a href="#" class="table-link danger">
                                            <span class="fa-stack">
                                                <i class="fa fa-square fa-stack-2x"></i>
                                                <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                                            </span>
                                        </a>
                                    </td>
                                </tr>
                                <% end %>
                                <% else %>
                                No stored profiles
                                <% end %>
                            </tbody>
                          </table>
                          <table class="table user-list">
                            <h2>Mentees</h2>
                            <thead>
                                <tr>
                                <th><span>Full Name</span></th>
                                <th><span>Languages</span></th>
                                <th><span>Location</span></th>
                                <th><span>GitHub Account</span></th>
                                <th><span>View my mentors</span></th>
                                <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody >
                              <% if @mentee.any? %>
                              <% @mentee.each do |profile| %>
                                <tr>
                                    <td>
                                        <img src="<%=profile.image%>">
                                        <div class="user-link">
                                          <%= profile.name %>
                                          <%= profile.surname %>
                                        </div>
                                        <span class="user-subhead">
                                          <%= profile.status %>
                                        </span>
                                    </td>
                                    <td>
                                      <%= profile.language %>
                                    </td>
                                    <td class="text-center">
                                        <span class="label label-default">
                                          <%= profile.location %>
                                        </span>
                                    </td>
                                    <td>
                                        <a href="<%=profile.github%>"><%="#{profile.name}'s GitHub Profile"%></a>
                                    </td>
                                    <td>
                                      <span>
                                        <%= link_to "View My Matches", profile_schedules_path(profile) %>
                                      </span>
                                    <td>
                                    <td style="width: 20%;">
                                      <a href="/profile/<%=profile.id%>" class="table-link">
                                            <span class="fa-stack">
                                                <i class="fa fa-square fa-stack-2x"></i>
                                                <i class="fa fa-search-plus fa-stack-1x fa-inverse"></i>
                                            </span>
                                        </a>
                                        <% if @current_user == profile.id %>
                                        <a href="/profile/<%=profile.id%>/edit" class="table-link">
                                            <span class="fa-stack">
                                                <i class="fa fa-square fa-stack-2x"></i>
                                                <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                            </span>
                                        </a>
                                      <%end%>
                                        <a href="#" class="table-link danger">
                                            <span class="fa-stack">
                                                <i class="fa fa-square fa-stack-2x"></i>
                                                <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                                            </span>
                                        </a>
                                    </td>
                                </tr>
                                <% end %>
                                <% else %>
                                No stored profiles
                                <% end %>
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
