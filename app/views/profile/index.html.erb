
<head>
<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
</head>

<body>
  <div class="container">
  <div class="jumbotron">
      <a href="/profile/new">Add your profile</a> <br> <br>
      <% if @profiles.any? %>
        <% @profiles.each do |profile| %>
            <img src=<%=profile.image%> style="width:50px;height:50px">
            <a href='<%=profile.github%>' >GitHub profile</a>
            <%= profile.name %> -
            <%= profile.surname %> -
            <%= profile.location %>
            <%= profile.schedule %><br />
            <%= profile.availability %>
            <%= link_to "View my mentors", profile_schedules_path(profile) %> <br />
        <% end %>
      <% else %>
        No stored profiles
      <% end %>



  </div>
</div>

</body>
